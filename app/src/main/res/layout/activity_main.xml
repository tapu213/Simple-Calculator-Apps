<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".MainActivity">

    <TextView
        android:layout_margin="12dp"
        android:id="@+id/firstTextViewId"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:background="@color/purple_200"
        android:textSize="25dp"
        android:gravity="right"
       />
    <TextView
        android:layout_margin="12dp"
        android:id="@+id/secondTextViewId"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:background="@color/teal_200"
        android:textSize="40dp"
        android:text="0"
        android:gravity="right"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">
        <Button
            android:layout_margin="7dp"
            android:id="@+id/CEbtnId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CE"
            android:textSize="35dp"
            />
        <Button
            android:layout_margin="7dp"
            android:id="@+id/CbtnId"
            android:onClick="clearFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:textSize="35dp"
            />
        <Button
            android:layout_margin="7dp"
            android:id="@+id/percentbtnId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="%"
            android:textSize="35dp"
            />
        <Button
            android:layout_margin="7dp"
            android:id="@+id/DbtnId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="D"
            android:textSize="35dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">
        <Button
            android:layout_margin="7dp"
            android:id="@+id/sevenBtnId"
            android:onClick="digitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="35dp"/>
        <Button
            android:layout_margin="7dp"
            android:id="@+id/eightBtnId"
            android:onClick="digitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="35dp"/>
        <Button
            android:layout_margin="7dp"
            android:id="@+id/nineBtnId"
            android:onClick="digitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="35dp"/>
        <Button
            android:layout_margin="7dp"
            android:id="@+id/divBtnId"
            android:onClick="logicFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            android:textSize="35dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">
        <Button
            android:layout_margin="7dp"
            android:id="@+id/fourBtnId"
            android:onClick="digitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="35dp"/>
        <Button
            android:layout_margin="7dp"
            android:id="@+id/fiveBtnId"
            android:onClick="digitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="35dp"/>
        <Button
            android:layout_margin="7dp"
            android:id="@+id/sixBtnId"
            android:onClick="digitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="35dp"/>
        <Button
            android:layout_margin="7dp"
            android:id="@+id/mulBtnId"
            android:onClick="logicFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*"
            android:textSize="35dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">
        <Button
            android:layout_margin="7dp"
            android:id="@+id/oneBtnId"
            android:onClick="digitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="35dp"/>
        <Button
            android:layout_margin="7dp"
            android:id="@+id/twoBtnId"
            android:onClick="digitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="35dp"/>
        <Button
            android:layout_margin="7dp"
            android:id="@+id/threeBtnId"
            android:onClick="digitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="35dp"/>
        <Button
            android:layout_margin="7dp"
            android:id="@+id/subBtnId"
            android:onClick="logicFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="35dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">
        <Button
            android:layout_margin="7dp"
            android:id="@+id/zeroBtnId"
            android:onClick="digitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="35dp"/>
        <Button
            android:layout_margin="7dp"
            android:id="@+id/pointBtnId"
            android:onClick="digitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="35dp"/>
        <Button
            android:layout_margin="7dp"
            android:id="@+id/resultBtnId"
            android:onClick="resultFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:textSize="35dp"/>
        <Button
            android:layout_margin="7dp"
            android:id="@+id/addBtnId"
            android:onClick="logicFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="35dp"/>

    </LinearLayout>

</LinearLayout>